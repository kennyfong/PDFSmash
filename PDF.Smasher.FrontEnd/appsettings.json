{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "PDFService": {
    "BaseURL": "https://localhost:8081/"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "Enrich": [
      "WithLogContext"
    ],
    "Properties": {
      "Application": "Customer Portal API Accounts"
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "c:\\temp\\Dev\\PDF.Smasher.API-{Date}.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {ProcessName} {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": "7"
        }
      }
    ]
  }
}
